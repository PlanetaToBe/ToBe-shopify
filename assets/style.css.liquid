body {
  font-family:'KievitWeb', Arial, sans-serif;
}

a {
  color: black;
  text-decoration: none;
  font-weight: bold;
  cursor: pointer;
}
a:hover {
  color: #1266fb;
}
a.active {
  color: black;
  cursor: default;
}

input[type=submit],
button {
  position: relative;
  font-size: 15px;
  line-height: 20px;
  line-height: 1.35em;
  font-weight: bold;
  border-radius: 2px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  border: 1px solid #222;
  color: rgba(0,0,0,0.78);
  display: inline-block;
  padding-top: 9px;
  padding-bottom: 6px;
  padding-left: 13px;
  padding-right: 13px;
  text-decoration: none;
  vertical-align: middle;
  background: transparent;
}
input[type=submit]:hover,
button:hover {
  color: #1266fb;
  border-color: #1266fb;
}

#logo {
  position: fixed;
  z-index: 1;
  left: 10px;
  top: 50px;
}
#logo img {
  height: 130px;
}

.template-collection #main>h1,
nav {
  font-weight: bold;
  font-size: 2.5em;
  margin-left: 60px;
  margin-top: 0;
  margin-bottom: 0;
}

.template-collection nav {
  display: none;
}

/* Hiding placeholder text on focus in webkit, thanks to http://www.kolodvor.net/2012/03/23/webkit-placeholder-attribute-behavior */
input:focus::-webkit-input-placeholder, textarea:focus::-webkit-input-placeholder { color:transparent; }

