}

/* Contain floats: nicolasgallagher.com/micro-clearfix-hack/ */ 
.clearfix:before, .clearfix:after { content: ""; display: table; }
.clearfix:after { clear: both; }
.clearfix { zoom: 1; }

input[type=number] {
  width: 60px;
}

ul {
  list-style-type: none;
  padding: 0;
}

ul.grid {
  width: 846px;
  margin: 0 auto;
}

ul.nav {
  display: inline;
}

ul.nav li {
  display: inline-block;
  margin-left: 0;
  text-align: left;
}
ul.sub-nav {
  display: none;
  margin-top: 5px;
  position: absolute;
  z-index: 1;
  padding-left: 0px;
  background-color: white;
}
ul.sub-nav li {
  margin-left: 5px;
  display: block;
}

/* Products grid, collections grid: we are using lists, not tables */
.template-collection ul.grid>li,
.template-index ul.grid>li {
  /* Yellow */
  /* background-color: #fafbac; */
  float: left;
  padding: 20px;
  margin: 0 30px 20px 0;
  position: relative;
  width: 353px;
  height: 324px;
  border-bottom: 1px solid #ddd;
}
/*.template-index ul.grid>li.last-in-row { margin-right: 0; }*/

.template-product ul.grid>li {
  display: inline;
}

#product-variants label {
  margin-right: 5px;
}

/* Collection handle styles */
.nov-2013 {
  /* Green */
  /*background-color: #b3f9eb;*/
}
.dec-2013 {
  /* Blue */
  /*background-color: #bee6fb;*/
}

.prod-image-wrap {
  text-align: center;
}
.prod-image-wrap img {
  height: 300px;
  max-height: 300px;
  max-width: 353px;
}

ul.collections {
  transform:rotate(-90deg);
  -ms-transform:rotate(-90deg);
  -webkit-transform:rotate(-90deg);
  width: 300px;
  position: absolute;
  left: -158px;
  top: 140px;
  text-align: right;
  font-weight: bold;
  padding-left: 0px;
}

ul.collections li {
  display: inline;
  margin-right: 5px;
}

ul.collections li.collection-frontpage {
  display: none !important;
}

.prod-caption {
  height: 15px;
}
.prod-caption .prod-vendor {
  font-weight: bold;
  position: absolute;
  left: 5px;
  bottom: 5px;
}
.prod-caption .prod-price {
  position: absolute;
  right: 5px;
  bottom: 5px;
}

.prod-caption .prod-price,
.product-price {
  font-size: 1.25em;
  font-weight: bold;
}

#product-photos img {
  max-height: 600px;
}

#product-photos,
#product-details {
  text-align: center;
}

#product-photo-thumbs img {
  max-height: 200px;
  max-width: 160px;
}

#product-details div {
  margin: 10px;
}

.template-cart #main {
  text-align: center;
}
.template-cart #main table {
  margin: 0 auto;
}
.template-cart tr {
  border-bottom: solid 10px white;
}
.template-cart tr:last-child {
  border-bottom: none;
}
.template-cart tr td {
  padding: 10px;
}

/* Utility classes: Hidden, float lef, float right, etc. */

.hidden { display: none; }
.left { float: left; }
.right { float: right; }

/* Styling #site-title as it uses h1 on home page and span on other pages. */

.container {
width: 960px;
padding: 20px;
margin: 0 auto;
}

a.icon {
  font-size: 12.5px;
  line-height: 21px;
}
a.icon span {
  display: inline-block;
  width: 1.6em;
  height: 1.6em;
  background-size: 1.6em;
  background-image: url({{ 'spritesheet.svg' | asset_url }});
  background-repeat: no-repeat;
  vertical-align:middle;
}
a.icon.active span,
a.icon:hover span {
  background-image: url({{ 'spritesheet_blue.svg' | asset_url }});
}
/* iconSize: 1.6em */
a.icon.close span {
  /* &.close {  background-position: 0 -22*$iconSize */
  background-position: 0 -35.2em;
}
