$(document).ready(function() {
  $('#menu-button').on('touchend', function(e){
    e.preventDefault();
    window.scrollTo(0, 1);
    var navTop = $('ul.nav.top').eq(0);
    if (navTop.is('.showing')) {
      navTop.removeClass('showing');
    }else{
      navTop.addClass('showing');
      navTop.css('opacity',0);
      setTimeout(function(){
        navTop.css('opacity',1);
      },1);
    }
  })

});
